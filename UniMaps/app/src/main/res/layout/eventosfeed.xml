<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventosfeed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_forms"
    android:textAlignment="center"
    android:textDirection="firstStrongRtl"
    android:visibility="visible">

    <Button
        android:id="@+id/FilterButton1"
        android:layout_width="185dp"
        android:layout_height="75dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="@color/brown"
        android:fontFamily="@font/urbanist_semi_bold"
        android:text="Filtrar"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toStartOf="@+id/editTextSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventostitle" />

    <TextView
        android:id="@+id/eventostitle"
        android:layout_width="394dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:background="@color/gray_forms"
        android:backgroundTint="@color/gray_forms"
        android:fontFamily="@font/urbanist_semi_bold"
        android:text="Eventos Disponibles"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#0B0A0A"
        android:textSize="34sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listViewEvents"
        android:layout_width="631dp"
        android:layout_height="1007dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="76dp"
        android:background="@color/gray_form_border"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextSearch"
        style="@android:style/Widget.Material.SearchView"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="14dp"
        android:background="@color/gray_form_border"
        android:hint="Buscar eventos"
        android:showDividers="middle|beginning|end"
        android:textAlignment="center"
        android:textSize="34sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/listViewEvents"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/FilterButton1" />

</androidx.constraintlayout.widget.ConstraintLayout>
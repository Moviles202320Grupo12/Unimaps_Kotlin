<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tutor_search"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/gray_forms"
    android:textAlignment="center"
    android:textDirection="firstStrongRtl"
    android:visibility="visible">

    <!-- Toolbar for the tutor information view -->

    <TextView
        android:id="@+id/tutor_title"
        android:layout_width="371dp"
        android:layout_height="56dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="12dp"
        android:background="@color/gray_forms"
        android:backgroundTint="@color/gray_forms"
        android:fontFamily="@font/urbanist_semi_bold"
        android:text="Tutores Disponibles"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#0B0A0A"
        android:textSize="34sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/FilterButton2"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        app:layout_constraintVertical_bias="0.478"
        tools:layout_editor_absoluteX="31dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="409dp"
        android:layout_height="56dp"
        android:layout_marginBottom="52dp"
        android:background="@color/yellow"
        android:titleTextColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/FilterButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/FilterButton2"
        android:layout_width="127dp"
        android:layout_height="53dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/urbanist_semi_bold"
        android:text="Filtrar"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toStartOf="@+id/editTextSearch2"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listViewTutores"
        android:layout_width="362dp"
        android:layout_height="538dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="5dp"
        android:background="@color/gray_form_border"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FilterButton2" />

    <EditText
        android:id="@+id/editTextSearch2"
        style="@android:style/Widget.Material.SearchView"
        android:layout_width="239dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:background="@color/gray_form_border"
        android:hint="Buscar Tutores"
        android:showDividers="middle|beginning|end"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/listViewTutores"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/tutorImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_form_border"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tutorNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:textColor="#050505" />

    <TextView
        android:id="@+id/tutorMateriaTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#020202"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tutorLocationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#020202"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tutorDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#020202"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TutorDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#020202"
        android:textSize="20sp" />
</LinearLayout>
